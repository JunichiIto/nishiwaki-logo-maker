link(rel="import" href="../../bower_components/polymer/polymer.html")
script(src="../../bower_components/interactjs/dist/interact.min.js")

dom-module#interact-component
  template
    style(is="custom-style")
      :stylus
        :host
          display: block
          position: relative
          ::content
            > *
              width: 100%
              height: 100%
              pointer-events: none
          .resize-handler
            position: absolute
            width: 100%
            height: 100%
            border: 10px solid rgba(255, 255, 255, 0.3)
            top: 0
            left: 0
            box-sizing: border-box
          &:not([shows-resize-handler]):not(:hover)
            .resize-handler
              display: none
    content
    .resize-handler
  script(src="./interact-component.js")
